print("Running Function Tests...")

# --- Test 1: Basic Return with Parameters ---
func add(a, b) {
    return a + b
}

let result = add(10, 20)
assert(result == 30)

# --- Test 2: Logic inside functions ---
func get_max(x, y) {
    if (x > y) {
        return x
    } else {
        return y
    }
}

assert(get_max(10, 5) == 10)
assert(get_max(3, 99) == 99)

# --- Test 3: Recursion (Factorial) ---
func factorial(n) {
    if (n <= 1) {
        return 1
    }
    return n * factorial(n - 1)
}

assert(factorial(5) == 120)

# --- Test 4: Nested Functions ---
# This checks if parser allows 'func' inside a block
func outer() {
    
    # Inner function (Local scope)
    func inner(val) {
        return val * 2
    }
    
    return inner(50)
}

assert(outer() == 100)

print("Function tests passed!")