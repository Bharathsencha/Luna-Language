print("Running Control Flow Tests...")

# --- IF / ELSE Tests ---
print("Test: IF/ELSE Checks")
let a = 10
if (a == 10) {
    assert(true)
} else {
    assert(false) 
}

if (a == 5) {
    assert(false) 
} else {
    assert(true)
}

# --- NESTED IF ---
print("Test: Nested IF")
if (a > 5) {
    if (a < 20) {
        assert(true)
    } else {
        assert(false)
    }
} else {
    assert(false)
}

# --- WHILE LOOP ---
print("Test: While Loop")
let i = 0
while (i < 5) {
    i++
}
assert(i == 5)

# --- BREAK ---
print("Test: While Break")
i = 0
while (true) {
    if (i == 3) {
        break
    }
    i++
}
assert(i == 3)

# --- CONTINUE ---
print("Test: While Continue")
i = 0
let sum = 0
while (i < 5) {
    i++
    if (i == 3) {
        continue 
    }
    sum = sum + i
}
# Expected: 1 + 2 + 4 + 5 = 12
assert(sum == 12)

# --- FOR LOOP ---
print("Test: For Loop")
let count = 0
let my_list = [1, 2, 3]

for (let j = 0; j < len(my_list); j++) {
    let x = my_list[j]
    count = count + x
}
assert(count == 6)

# --- FOR LOOP BREAK ---
print("Test: For Loop Break")
count = 0
let list2 = [10, 20, 30, 40]

for (let j = 0; j < len(list2); j++) {
    let x = list2[j]
    
    if (x == 30) {
        break
    }
    count = count + 1
}
assert(count == 2) 

print("Control Flow tests passed!")