print("--- DEBUG: Starting Control Flow Tests ---")

# --- IF / ELSE ---
print("Testing IF/ELSE...")
let a = 10
if (a == 10) {
    print("  IF passed")
} else {
    print("  IF failed")
    assert(false)
}

if (a == 5) {
    print("  ELSE failed")
    assert(false) 
} else {
    print("  ELSE passed")
}

# --- WHILE LOOP ---
print("Testing WHILE...")
let i = 0
while (i < 5) {
    i++
}
print("  i is:", i)
assert(i == 5)

# --- BREAK ---
print("Testing BREAK...")
i = 0
while (true) {
    if (i == 3) {
        break
    }
    i++
}
print("  Break i is:", i)
assert(i == 3)

# --- CONTINUE ---
print("Testing CONTINUE...")
i = 0
let sum = 0
while (i < 5) {
    i++
    if (i == 3) {
        print("  Skipping 3...")
        continue 
    }
    print("  Adding:", i)
    sum = sum + i
}
# Expected: 1 + 2 + 4 + 5 = 12
print("  Sum is:", sum)
assert(sum == 12)

# --- FOR LOOP ---
print("Testing FOR LOOP...")
let count = 0
let my_list = [1, 2, 3]

for (let j = 0; j < len(my_list); j++) {
    let x = my_list[j]
    print("  For Loop item:", x)
    count = count + x
}
print("  Count is:", count)
assert(count == 6)

print("--- ALL TESTS PASSED ---")